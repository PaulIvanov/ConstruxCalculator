<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/material_estimate_cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/material_est_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="materialName" />

        <TextView
            android:id="@+id/material_est_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/material_est_total_price"
            android:layout_alignBottom="@+id/material_est_total_price"
            android:layout_alignParentStart="true"
            android:textSize="30sp"
            tools:text="measPrice" />

        <TextView
            android:id="@+id/material_est_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/material_est_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            tools:text="totalPrice" />

        <TextView
            android:id="@+id/material_total-meas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="measurement" />

    </RelativeLayout>

</android.support.v7.widget.CardView>