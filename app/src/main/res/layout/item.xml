<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    android:clickable="false"
    app:cardElevation="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/card_border"
        android:elevation="6dp"
        android:padding="8dp"
        android:theme="@style/CardView">

        <ImageView
            android:id="@+id/job_photo"
            android:layout_width="85dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/job_photo"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            tools:text="Job Name" />

        <TextView
            android:id="@+id/job_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_name"
            android:layout_toEndOf="@+id/job_photo"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            tools:text="Address" />

        <TextView
            android:id="@+id/job_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/card_border"
            android:backgroundTint="@android:color/darker_gray"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="TextView"
            tools:text="Job Status" />

        <TextView
            android:id="@+id/job_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/job_photo"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/job_photo"
            tools:text="Date Created" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
